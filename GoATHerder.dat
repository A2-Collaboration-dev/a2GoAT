#=======================================================================
# Global Config file for a GoAT analysis
#=======================================================================

#-----------------------------------------------------------------------
# General Setup
#-----------------------------------------------------------------------

Input-File: /home/cristina/RootTreeFULL_Compton_354.root
Output-File: /home/cristina/out_RootTreeFULL_Compton_354.root
Period-Macro: 100000

#-----------------------------------------------------------------------
# Particle Reconstruction
#-----------------------------------------------------------------------
Do-Particle-Reconstruction: 1

Do-Charged-Particle-Reconstruction: 1
Cut-dE-E-CB-Proton: 	cuts/CB_DeltaE-E_Proton.root Proton
Cut-dE-E-CB-Pion: 		cuts/CB_DeltaE-E_Pion.root Pion
Cut-dE-E-TAPS-Pion: 	cuts/TAPS_DeltaE-E.root	CutPiplus
Cut-dE-E-TAPS-Proton: 	cuts/TAPS_DeltaE-E.root CutProton
Cut-dE-E-TAPS-Electron: cuts/TAPS_DeltaE-E.root CutElectron

Do-Meson-Reconstruction: 1
Cut-IM-Width-Pi0: 20
Cut-IM-Width-Eta: 44
Cut-IM-Width-Eta-Prime: 60

#-----------------------------------------------------------------------
# Sorting Preferences
#-----------------------------------------------------------------------
# Just turn off a sort completely to ignore a sorting preference
# Use +, - or = to set counters (ex. 3- will accept 3 or less)

#						Total 	CB		TAPS
SortRaw-NParticles: 	7=		6=		1=

SortRaw-CBEnergySum: 	400+

Sort-NParticles: 	2=

					Number		Theta-min	Theta-max
Sort-Proton: 		1= 			0 			20
#Sort-ChPion: 		1=			20			40
#Sort-Pi0: 			1= 			0 			180
Sort-Eta: 			1= 			20 			180
